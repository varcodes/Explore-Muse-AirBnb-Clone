<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Sign Up on Explore Muse</h1>
  <div class="col-6 offset-3">
    <form method="POST" action="/signup" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          class="form-control"
          type="text"
          id="username"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Enter Username</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          class="form-control"
          type="email"
          id="email"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          class="form-control"
          type="password"
          id="password"
          required
        />
      </div>
      <button class="btn btn-success">Sign Up</button>
      <p>- or - <a href="/login">Already have an account</a></p>
    </form>
  </div>
</div>
