<% layout("/layouts/boilerplate") %>
<body>

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3><%= listing.title %></h3>
        </div>
            <div class="card listing-card col-6 offset-3 mt-3">
                <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                <p class="card-text">
                    <br>
                   <%= listing.desc %> 
                   <br> 
                   <h6>&#8377; <%= listing.price.toLocaleString("en-IN") %> </h6> 
                   <%= listing.location %>, <%= listing.country %>
                   
                </p>
                <div class="row">
                    <form method="GET" action="/listings/<%=listing._id%>/edit" class="col-3">
                        <button class="btn btn-dark edit-detail-btn">Edit this Listing</button>
                    </form>
                    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" class="col-4">
                        <button class="btn btn-outline-dark dlt-detail-btn">Delete this Listing</button>
                    </form>
                </div>
                <div>
                    <hr>
                    <h4>Leave a Review</h4>
                    <form method="POST" action="/listings/<%= listing.id %>/reviews" class="needs-validation" novalidate>
                        <div class="mb-3 mt-3">
                            <label for="rating" class="form-label">Rating</label>
                            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea placeholder="Enter a Review" cols="30" rows="5" id="comment" name="review[comment]" class="form-control" required></textarea>
                            <div class="invalid-feedback">Enter a Review</div>
                        </div>
                        <button class="btn btn-outline-dark review-btn mb-3">Submit</button>
                    </form>
                    <hr>
                    <h4>All Reviews</h4>
                    <div class="row">
                        <% for(let review of listing.reviews) { %>
                            <div class="card col-5 ms-3 mb-3">
                                <div class="card-body">
                                  <h5 class="card-title">Anonymous</h5>
                                  <h6 class="card-subtitle mb-2 text-body-secondary">Rating: <%= review.rating %> &star;</h6>
                                  <p class="card-text"><%= review.comment %></p>
                                </div>
                              </div>
                       <% } %>
                    </div>
                    
                </div>
                
          </div>
        </div>
            
        
    </div>

 
</body>
